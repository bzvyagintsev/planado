<% breadcrumb :books %>
    <div class="row">
        <div class="col-md-6">
            <h1>Книги</h1>
        </div>
        <div class="col-md-6">
            <div class="pull-right">
                <%= link_to new_book_path, class: 'btn btn-primary btn-sm' do %>
                    <i class="fa fa-plus"></i> Новая книга
                    <% end %>
            </div>
        </div>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th class="table__id">#</th>
                <th>Название</th>
                <th>Библиотека</th>
                <th>Шифр</th>
                <th>Автор</th>
                <th class="table__actions">Действия</th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td class="table__id">
                        <%= book.id %>
                    </td>
                    <td>
                        <%= book.name %>
                    </td>
                    <td>
                        <%= book.library.name %>
                    </td>
                    <td>
                        <%= book.cypher %>
                    </td>
                    <td>
                        <%= book.author %>
                    </td>
                    <td class="table__actions">
                        <%= link_to book do %>
                            <i class="fa fa-eye"></i>
                            <% end %>
                                <%= link_to edit_book_path(book) do %>
                                    <i class="fa fa-pencil"></i>
                                    <% end %>
                                        <%= link_to book, method: :delete, data: { confirm: 'Вы уверены?' } do %>
                                            <i class="fa fa-trash"></i>
                                            <% end %>
                    </td>
                </tr>
                <% end %>
        </tbody>
    </table>
