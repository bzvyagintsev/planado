<%= form_for(@book, html: {class: 'form-horizontal'}) do |f| %>
    <% if @book.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                    <li>
                        <%= message %>
                    </li>
                    <% end %>
            </ul>
        </div>
        <% end %>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Название</label>
                <div class="col-md-4">
                    <%= f.text_field :name, class: 'form-control input-sm', required: 'required' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Шифр</label>
                <div class="col-md-4">
                    <%= f.text_field :cypher, class: 'form-control input-sm', required: 'required' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Библиотека</label>
                <div class="col-md-4">
                    <%= f.select :library_id, Library.all.collect {|l| [ l.name, l.id ]}, {include_blank: "Выберите библиотеку"}, class: 'form-control input-sm', required: 'required' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Автор</label>
                <div class="col-md-4">
                    <%= f.text_field :author, class: 'form-control input-sm' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Издательство</label>
                <div class="col-md-4">
                    <%= f.text_field :publisher, class: 'form-control input-sm' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Год издания</label>
                <div class="col-md-4">
                    <%= f.text_field :publishing_year, class: 'form-control input-sm' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Цена</label>
                <div class="col-md-4">
                    <%= f.text_field :price, class: 'form-control input-sm' %>
                </div>
            </div>
            <div class="form-group">
                <label for="book[name]" class="col-md-2">Дата поставки</label>
                <div class="col-md-4">
                    <%= f.date_field :supply_date, class: 'form-control input-sm' %>
                </div>
            </div>
            <br>
            <div class="actions">
                <%= f.submit "Отправить", class: 'btn btn-sm btn-primary' %>
            </div>
            <% end %>
